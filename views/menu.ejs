<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('./partials/nav') %>
    <h1>Full Menu</h1>
    <h2 class="mt-4">Mains</h2>
    <div class="row">
      <% menu.forEach(function(item) { %> <% if (item.category === 'mains') { %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Name: <%= item.name %></h5>
            <p class="card-text">Price: <%= item.price %></p>
            <p class="card-text">Rating: <%= item.rating %></p>
            <p class="card-text">Details: <%= item.details %></p>
          </div>
        </div>
      </div>
      <% } %> <% }) %>
    </div>

    <h2 class="mt-4">Sides</h2>
    <div class="row">
      <% menu.forEach(function(item) { %> <% if (item.category === 'sides') { %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Name: <%= item.name %></h5>
            <p class="card-text">Price: <%= item.price %></p>
            <p class="card-text">Rating: <%= item.rating %></p>
            <p class="card-text">Details: <%= item.details %></p>
          </div>
        </div>
      </div>
      <% } %> <% }) %>
    </div>
    <h2 class="mt-4">Desserts</h2>
    <div class="row">
      <% menu.forEach(function(item) { %> <% if (item.category === 'desserts') {
      %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Name: <%= item.name %></h5>
            <p class="card-text">Price: <%= item.price %></p>
            <p class="card-text">Rating: <%= item.rating %></p>
            <p class="card-text">Details: <%= item.details %></p>
          </div>
        </div>
      </div>
      <% } %> <% }) %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
